#:kivy 2.0.0
<MainLayout>:
    orientation: 'vertical'


<WeatherLayout>:
    orientation: 'vertical'

    city: city
    weather_result: weather_result


    BoxLayout:
        id: topBox
        orientation:'vertical'
        size_hint: [1,0.1]

        Label:
            text: 'Enter your city:'
            font_size: 25

    BoxLayout:
        id: midleBox
        orientation:'vertical'
        size_hint: [1,.2]

        TextInput:
            id: city
            text: ''
            font_size: 25
            multiline: False
            background_color: [1,1,1,.5]
            foreground_color: (1,1,1,1)
            cursor_color: (1,1,1,1)

        Button:
            text: 'Enter'
            on_press: root.print_weather()
    
    BoxLayout:
        id: bottomBox
        orientation: 'vertical'
        size_hint: [1,.8]
        
        TextInput:
            id: weather_result
            readonly: True

<CurrencyLayout>:
    orientation: 'vertical'

    curency_result: curency_result
    mainbutton: mainbutton

    BoxLayout:
        id: currencyBox
        orientation:'horizontal'
        size_hint: [1,.2]

        Button:
            id: mainbutton
            text: 'Currencies'
            on_release: root.dropdown.open(self)

    
        Button:
            text: 'Get currency'
            on_press: root.print_currency()
    
    TextInput:
        id: curency_result
        readonly: True

<CurrencyDropDown>:
    dismiss_on_select: False
    
    usd: usd
    eur: eur
    pln: pln
    rub: rub
    gbp: gbp
    jpy: jpy
    turkish_lira: turkish_lira
    nok: nok
    aed: aed
    cny: cny
    czk: czk
    byn: byn

    ToggleButton:
        id: usd
        text: 'U.S. Dollar (USD)'  
        size_hint_y: None
    ToggleButton:
        id: eur
        text: 'Euro (EUR)'
        size_hint_y: None
    ToggleButton:
        id: pln
        text: 'Polish Zloty (PLN)'
        size_hint_y: None
    ToggleButton:
        id: rub
        text: 'Russian Shit (RUB)'
        size_hint_y: None
    ToggleButton:
        id: gbp
        text: 'U.K. Pound Sterling (GBP)'
        size_hint_y: None
    ToggleButton:
        id: jpy
        text: 'Japanese Yeng (JPY)'
        size_hint_y: None
    ToggleButton:
        id: turkish_lira
        text: 'Turkish Lira (TRY)'
        size_hint_y: None
    ToggleButton:
        id: nok
        text: 'Norwegian Krone (NOK)'
        size_hint_y: None
    ToggleButton:
        id: aed
        text: 'U.A.E Dirham (AED)'
        size_hint_y: None
    ToggleButton:
        id: cny
        text: 'Chinese Yuan (CNY)'
        size_hint_y: None
    ToggleButton:
        id: czk
        text: 'Czech Koruna (CZK)'
        size_hint_y: None
    ToggleButton:
        id: byn
        text: 'Belarussian  Shit (BYN)'
        size_hint_y: None
