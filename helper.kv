#:kivy 2.0.0
<MainLayout>:
    orientation: 'vertical'


<WeatherLayout>:
    orientation: 'vertical'

    img: img
    city: city
    weather_result: weather_result


    BoxLayout:
        id: topBox
        orientation:'vertical'
        size_hint: [1,0.1]

        Label:
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: '[color=000000]Enter your city:[/color]'
            markup: True
            font_size: 25

    BoxLayout:
        id: midleBox
        orientation:'vertical'
        size_hint: [1,.2]

        TextInput:
            id: city
            text: ''
            font_size: 25
            multiline: False
            background_color: [1,1,1,1]
            foreground_color: (0,0,0,1)
            cursor_color: (0,0,0,1)

        Button:
            text: 'Enter'
            on_press: root.print_weather()
    
    FloatLayout:
        size_hint: [1,.8]
        
        BoxLayout:
            id: bottomBox
            orientation: 'horizontal'
            pos_hint: {'top': 1}

            TextInput:
                id: weather_result
                readonly: True

        Image:
            id: img
            pos_hint: {'x': .75, 'y':.65}
            size_hint: None, None
            source: ''
            size: self.texture_size

<CurrencyLayout>:
    orientation: 'vertical'

    currency_result_main: currency_result_main
    currency_result_reversed: currency_result_reversed
    mainbutton: mainbutton

    BoxLayout:
        id: currencyBox
        orientation:'horizontal'
        size_hint: [1,.2]

        Button:
            id: mainbutton
            text: 'Currencies'
            on_release: root.dropdown.open(self)

    
        Button:
            text: 'Get currency'
            on_press: root.print_currency()
    
    BoxLayout:
        id: curency_result_box
        orientation:'horizontal'
        padding: [0, 0, 0, 0]

        TextInput:
            id: currency_result_main
            readonly: True  
            padding: [20, 20, 0, 0]
        TextInput:
            id: currency_result_reversed
            readonly: True  
            padding: [20, 20, 0, 0]

<CurrencyDropDown>:
    dismiss_on_select: False
    
    usd: usd
    eur: eur
    pln: pln
